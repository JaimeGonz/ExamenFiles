<%- include("template/head", {tituloWeb: 'Add'}) %> 
<%- include("template/header") %> 

    <body>
        <section>
            <div class="container">
                <div class="">
                    <h1 class="title">Editar archivo de texto</h1>
                </div>
                <div class="box card__note">
                    <!-- Formulario que envia peticiÃ³n POST -->
                    <form action="/edit" method="post">
                        <input class="input " type="hidden" placeholder="Documento 1" name="title" value="<%= title %>">
                        <div class="field">
                            <label for="POST_title" class="label label__note">Nombre</label>
                            <div class="control input__note">
                                <input class="input " type="text" placeholder="Documento 1" name="ntitle" value="<%= title %>">
                            </div>
                        </div>
                        <div class="field">
                            <label for="POST_body" class="label label__note">Contenido</label>
                            <div class="control input__note">
                            <textarea id="" name="nbody" class="textarea" placeholder="Lorem ipsum dolor, sit amet consectetur adipisicing elit. Repudiandae laudantium quos placeat tenetur, impedit, ab dolorum hic doloremque animi culpa veniam ea consequuntur in explicabo ad atque optio, ipsam quasi!" ><%= text %></textarea>  
                        </div>
                        <div class="field">
                            <div class="control input__note input__note-btn">
                                <input class="button is-success is-dark is-rounded" type="submit" value="Guardar">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </body>
</html>